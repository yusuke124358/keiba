{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "CheckpointSummary",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "checkpoint_id",
    "range_start",
    "range_end",
    "total_runs",
    "passes",
    "fails",
    "inconclusive",
    "top_wins",
    "top_risks",
    "next_actions"
  ],
  "properties": {
    "checkpoint_id": {"type": "string"},
    "range_start": {"type": "string"},
    "range_end": {"type": "string"},
    "total_runs": {"type": "integer"},
    "passes": {"type": "integer"},
    "fails": {"type": "integer"},
    "inconclusive": {"type": "integer"},
    "top_wins": {"type": "array", "items": {"type": "string"}},
    "top_risks": {"type": "array", "items": {"type": "string"}},
    "next_actions": {"type": "array", "items": {"type": "string"}}
  }
}
