{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Review Items",
  "type": "object",
  "required": ["issues"],
  "properties": {
    "issues": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "source", "type", "severity", "message"],
        "properties": {
          "id": { "type": "string" },
          "source": { "type": "string" },
          "type": { "type": "string" },
          "severity": {
            "type": "string",
            "enum": ["low", "medium", "high", "critical"]
          },
          "file": { "type": "string" },
          "line": { "type": "integer" },
          "message": { "type": "string" },
          "suggested_fix": { "type": "string" },
          "acceptance_check": { "type": "string" }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
