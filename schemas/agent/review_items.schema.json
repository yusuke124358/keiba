{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Review Items",
  "type": "object",
  "required": ["issues"],
  "properties": {
    "issues": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "id",
          "source",
          "type",
          "severity",
          "file",
          "line",
          "message",
          "suggested_fix",
          "acceptance_check"
        ],
        "properties": {
          "id": { "type": "string" },
          "source": { "type": "string" },
          "type": { "type": "string" },
          "severity": {
            "type": "string",
            "enum": ["low", "medium", "high", "critical"]
          },
          "file": { "type": ["string", "null"] },
          "line": { "type": ["integer", "null"] },
          "message": { "type": "string" },
          "suggested_fix": { "type": ["string", "null"] },
          "acceptance_check": { "type": ["string", "null"] }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
